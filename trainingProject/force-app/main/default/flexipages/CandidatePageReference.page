<apex:page controller="CandidatePageController">
    <apex:form >
        <apex:pageBlock title="Candidate">

            <apex:pageBlockButtons location="top">
                <apex:commandButton action="{!process}" value="Selected" />
                <apex:commandButton action="{!cancel}" value="Cancel" />
            </apex:pageBlockButtons>
            <apex:pageMessages />

            <apex:pageBlockSection title="Candidate Information -  Page {!pageNumber}" columns="1">
                <apex:pageBlockTable value="{!categories}" var="c">
                    <apex:column width="25px">
                        <apex:inputCheckbox value="{!c.checked}" />
                    </apex:column>
                    <apex:column value="{!c.candidatet.Candidate_Name__c}" headerValue="Name" />
                    <apex:column value="{!c.candidatet.Candidate_Age__c}" headerValue="Age" />
                    <apex:column value="{!c.candidatet.Candidate_Phone__c}" headerValue="Phone" />
                    <apex:column value="{!c.candidatet.Candidate_Email__c}" headerValue="Email" />
                    <apex:column value="{!c.candidatet.Candidate_Education__c}" headerValue="Education" />
                    <apex:column value="{!c.candidatet.Candidate_City__c}" headerValue="City" />
                    <apex:column value="{!c.candidatet.Candidate_SSN__c}" headerValue="SSN" />
                    <apex:column value="{!c.candidatet.Candidate_Visa_Required__c}" headerValue="Visa Required" />
                </apex:pageBlockTable>
            </apex:pageBlockSection>
        </apex:pageBlock>

        <apex:panelGrid columns="4">
            <apex:commandLink action="{!first}">First</apex:commandlink>
                <apex:commandLink action="{!previous}" rendered="{!hasPrevious}">Previous</apex:commandlink>
                    <apex:commandLink action="{!next}" rendered="{!hasNext}">Next</apex:commandlink>
                        <apex:commandLink action="{!last}">Last</apex:commandlink>
        </apex:panelGrid>

    </apex:form>
</apex:page>
